################################################################
cc_binary(
    name  = "parse_test",
    linkstatic = 1,
    srcs  = ["parse_test.c", ":mkhdrs"],
    deps = DEPS + [
        "//lib:findlibc",
    ],
    copts = COPTS + [
        "-I$(GENDIR)/$(@)/lib",
        "-I$(GENDIR)/$(@)/test",
    ],
    local_defines = BASE_DEFINES,
    toolchains = TOOLCHAINS,
)

##########
# WARNING: lexer's API not exposed in findlib.h
# so we depend on lexer directly, not libfindlib,
# which means too that mkhdrs does same
cc_binary(
    name  = "lex_test",
    linkstatic = 1,
    srcs  = ["lex_test.c", ":mkhdrs"],
    deps = DEPS + ["//lib/lexer:meta_lexer"],
    copts = COPTS + ["-I$(GENDIR)/$(@)/test"],
    local_defines = BASE_DEFINES,
    toolchains = TOOLCHAINS,
)

##########
cc_binary(
    name  = "crawl_test",
    linkstatic = 1,
    srcs  = ["crawler_test.c", ":mkhdrs"],
    deps = DEPS   + [
        "//lib:findlibc",
        "@semverc//src:semverc",
    ],
    copts = COPTS + [
        "-I$(GENDIR)/$(@)/lib",
        "-I$(GENDIR)/$(@)/test",
        "-I$(@semverc)/src",
    ],
    local_defines = BASE_DEFINES,
    toolchains = TOOLCHAINS,
)

