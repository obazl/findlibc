load("@makeheaders//rules:makeheaders.bzl", "makeheaders")

load("//config/cc:CONFIG.bzl",
     "BASE_COPTS",
     "BASE_DEFINES")

DEPS  = ["@liblogc//lib:logc", "@uthash//lib:uthash"]
COPTS = BASE_COPTS
TOOLCHAINS = ["//:test_module_profiles"]

