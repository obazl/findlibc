     COPTS = "BASE_COPTS",
     DEFINES = "BASE_DEFINES")

################################################################
cc_binary(
    name  = "lex_test",
    linkstatic = 1,
    srcs  = [
        "lex_test.c",
        "lex_test.h",
    ],
    copts = COPTS + [
        "-I$(GENDIR)/src",
        "-I$(GENDIR)/test",
        "-Iexternal/liblog_cc~{}/src".format(LIBLOG_CC_VERSION),
        "-Iexternal/uthash~{}/src".format(UTHASH_VERSION)
    ],
    local_defines = DEFINES, # ["DEBUG", "DEBUG_LEX"],
    deps = [
        "@liblog_cc//src:logc",
        "@uthash//src:uthash",
        "//src/lexer:meta_lexer"
    ],
)

